[flake8]
max-line-length = 127
exclude = 
    __pycache__,
    .git,
    .github,
    deployment/scripts/auto_shutdown.py  # Exclude this file
    *.pyc
ignore = 
    E501,  # Line too long
    W503,  # Line break before binary operator
    E203,  # Whitespace before ':'
    E999   # SyntaxError - we fixed this
